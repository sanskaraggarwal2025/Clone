generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int          @id @default(autoincrement())
  name        String?
  email       String       @unique
  phone       String?      @unique
  password    String       
  submissions Submission[] 
}


model Problem {
  id          Int           @id @default(autoincrement())
  description String       
  title       String
  testcases   Json          @default("{}")
  submissions Submission[]
}

model Submission {
  id        Int     @id @default(autoincrement())
  code      String
  user      User    @relation(fields: [userId], references: [id])
  userId    Int
  problem   Problem @relation(fields: [problemId], references: [id])
  problemId Int
}

enum problemStatus {
  No_Submission
  Accepted
  Wrong_Answer
}
